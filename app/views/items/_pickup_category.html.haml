.PickupContainer
  .PickupContainer__title
    ピックアップカテゴリー
  .PickupContainer__box
  .PickupContainer__box__subtitle
    = link_to '新規投稿商品', '#' , class: 'subtitle'
    .PickupContainer__box__lists
      - @items.each do |item|
        .PickupContainer__box__lists__list
          = link_to item_path(item),class: 'PickupContainer__box__lists__list' do
            .image_list
              .sold
                .sold__inner
                  SOLD 
                /=image_tag item.item_images.first.image_url.to_s if item.item_images.first
            .name
              = item.name
            .price
              = item.price              
              .taxinclude
                (税込)
              

  .PickupContainer__title
    ピックアップブランド
  .PickupContainer__box
  .PickupContainer__box__subtitle
    = link_to 'アーカイバ', '#' , class: 'subtitle'
    .PickupContainer__box__lists
      - @items.each do |item|
        .PickupContainer__box__lists__list
          = link_to item_path(item),class: 'PickupContainer__box__lists__list' do
            .image_list
              /=link_to (image_tag item.item_images.first.image_url.to_s)
            .PickupContainer__box__lists__list__contents--name
              = item.name
            .PickupContainer__box__lists__list__contents--price
              = item.price              
              .PickupContainer__box__lists__list__contents--price--taxinclude
                (税込)
  
